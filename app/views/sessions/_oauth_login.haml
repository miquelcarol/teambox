- if @invitation
  .use_this_email{ :style => 'margin: 40px 0 -20px 0; padding: 10px; border: 1px rgb(220,220,150) solid; background-color: rgb(255,255,200)' }
    = t(:'users.form.use_this_email_sso', :email => @user.email)
- if APP_CONFIG['oauth_providers']
  .oauth_logins
    - APP_CONFIG['oauth_providers'].each do |provider|
      %p= link_to image_tag("login_with_" + provider[0] + ".png"), !@invitation_token ? oauth_request_path({:provider => provider[0]}) : oauth_request_invitation_path({:provider => provider[0], :invitation => @invitation_token})
- if APP_CONFIG['openid_providers']
  - APP_CONFIG['openid_providers'].each do |provider|
    %p= link_to image_tag("login_with_openid_" + provider[0] + ".png"), !@invitation_token ? openid_request_path({:provider => provider[0]}) : openid_request_invitation_path({:provider => provider[0], :invitation => @invitation_token})
